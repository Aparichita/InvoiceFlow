{
  "version": 3,
  "builds": [
    { "src": "src/index.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "invoices/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/index.js" },
    { "src": "/invoices/(.*)", "dest": "/invoices/$1" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
